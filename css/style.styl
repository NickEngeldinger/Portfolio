@import 'jeet'

@font-face
    font-family 'league_gothic_regular';
    src url('fonts/leaguegothic-regular-webfont.eot')
    src: url('../fonts/leaguegothic-regular-webfont.eot?#iefix') format('embedded-opentype'),
         url('../fonts/leaguegothic-regular-webfont.woff2') format('woff2'),
         url('../fonts/leaguegothic-regular-webfont.woff') format('woff'),
         url('../fonts/leaguegothic-regular-webfont.ttf') format('truetype'),
         url('../fonts/leaguegothic-regular-webfont.svg#league_gothicregular') format('svg')
    font-weight normal
    font-style normal

@font-face
    font-family 'goudy_bookletter';
    src url('fonts/goudy_bookletter.eot')
    src: url('../fonts/goudy_bookletter.eot?#iefix') format('embedded-opentype'),
         url('../fonts/goudy_bookletter.woff') format('woff'),
         url('../fonts/goudy_bookletter.ttf') format('truetype'),
         url('../fonts/goudy_bookletter.svg#league_gothicregular') format('svg')
    font-weight normal
    font-style normal

border = #e7f5ff
highlight = #728574
accent = #c7cfcd
main-bg = #Efeff1
alt-bg = #becad4
maxWidth = 1170px

body
	background-color main-bg
	margin 0
	padding 0

a 
	text-decoration none

dd,dt,dd
	margin 0
	padding 0

header
	background linear-gradient(rgba(0,0,0,0.35),rgba(0,0,0,0.5)), url('../img/desk-corner.jpg')
	background-position 50% top
	
.header
	center(maxWidth)
	color main-bg
	font-family 'league_gothic_regular'
	height 500px

	h1
		font-size 8em
		font-weight normal
		margin-bottom 0
		opacity 0
		text-shadow 2px 2px 10px rgba(139,69,19,0.4)
		text-align center
		
		transition opacity 2.5s ease

		&.animate
			opacity 1

		cite
			display inline-block
			font-size 0.25em
			font-style normal
			opacity 1
			text-transform uppercase
			
			transform translatey(-300px)
			transition transform 2s ease

			&.animate 
				transform translatey(0)

		span
			display block
			margin-top 15px
			font-family 'goudy_bookletter'
			font-size .3em

.spacer
	height 500px
	background linear-gradient(rgba(0,0,0,0.35),rgba(0,0,0,0.5)), url('../img/desk-corner.jpg')
	background-position 50% 71%
	position relative

	p
		color main-bg
		font-family 'goudy_bookletter'
		font-size 2em
		position relative
		top 35%
		margin 0 auto
		text-align center
		width 800px

		a
			color main-bg
			display block
			margin 0 auto
			margin-top 25px
			width 240px

			&:hover
				color main-bg
				text-decoration underline
				/* ADD A BETTER STYLED UNDERLINE ON HOVER */

nav
	background-color accent

.nav
	center(1170px)
	font-family 'league_gothic_regular'

.info
	col(1/3)

	.circle
		position relative
		width 75%
		height 0
		padding 37.5% 0
		margin 70px auto
		border-radius 50%
		background main-bg

	.content
		height 100%
		left 0
		opacity 0
		position absolute
		top 0
		text-align center
		width 100%

		transition opacity 2.5s ease

		&.animate
			opacity 1

		&:before
			content ''
			vertical-align middle
			display inline-block
			width 0
			height 100%

		a
			vertical-align middle
			display inline-block
			color highlight
			hover-color accent
			font-size 2.5em
			transition all .3s ease

			.icon
				display inline-block
				height 1.5em
				fill highlight
				width 1.5em

.my-work
	h2
		color highlight
		font-family 'league_gothic_regular'
		font-size 3em
		font-weight normal
		margin-top 60px
		margin-bottom 0
		text-align center

.work
	center(maxWidth)
	padding 75px 50px

	a
		col(1/4, cycle: 4)
		margin-bottom 40px
		position relative

		img 
			width 100%

		span
			background-color rgba(0,0,0,0)
			box-sizing border-box
			color rgba(239,239,241,0)
			font-size 2em
			font-family 'league_gothic_regular'
			height 100%
			left 0
			padding-top 20%
			position absolute
			text-align center
			top 0
			transition all .3s ease
			width 100%

		&:hover 
			span
				background-color rgba(0,0,0,0.7)
				color rgba(239,239,241,1)

.work-samples
	opacity 1
	overflow hidden

.solutions
	center(maxWidth)
	font-family 'goudy_bookletter'
	padding-bottom 100px

	h3
		color accent
		font-family 'league_gothic_regular'
		font-size 6em
		font-weight normal
		margin 0
		opacity 0.4

	p 
		font-size 1.5em
		left 25px
		margin 0
		padding-right 25px
		position relative
		top -50px

	.prob 
		col(2/3)

	.sol
		col(2/3)
		shift(1/3)
	
	.prob + figure
		col(1/3)

	.sol + figure
		col(1/3)
		shift(-2/3)

	figcaption
		text-align center

	img
		width 100%

		&:hover
			cursor pointer
	
	dl 
		position relative

	dt[class^="page-"], dt[class*=" page-"]
		right -2000px
		left auto
		position absolute
		top 100px
		width 100%

		&.hide
			/*display none*/	

		&.show
			/*dispay block*/

	dd[class^="page-"], dd[class*=" page-"]
		right -2000px
		left auto
		position absolute
		top 400px
		width 100%

		&.hide
			/*display none*/

		&.show
			/*dispay block*/
			
.page-header
	color highlight
	position relative

	.return-work
		cursor pointer
		display block
		font-size 2em
		height 17px
		left -20px
		position absolute
	
	h2
		col(.9)
		font-family 'league_gothic_regular'
		font-size 3em
		font-weight normal
		margin-top 0

	.page-controls
		col(.1)
		font-family 'league_gothic_regular'
		font-size 1.25em
		font-weight normal
		line-height 3em
		text-align right

		.hide
			display none

		.prev,
		.next
			cursor pointer

.modal-bg
	background-color rgba(0,0,0,0.8)
	left 0
	height 100%
	position absolute
	top 0
	width 100%
	z-index 1000

	.modal-body
		background #fff
		margin 0 auto
		margin-top 100px
		padding 10px
		position relative
		width 60%

	.modal-close
		background #fff
		display block
		height 22px
		padding 4px
		position absolute
		top -22px
		right 0
		text-align center
		width 35px


	img
		width 100%		
footer
	background-color alt-bg
	height 400px
